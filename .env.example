# Database
DATABASE_URL="postgresql://username:password@localhost:5432/wechangemakers"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service (e.g., SendGrid, Postmark)
EMAIL_FROM="noreply@wechangemakers.org"
SENDGRID_API_KEY="your-sendgrid-api-key"

# SMS Service (e.g., Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET_NAME="wechangemakers-assets"
AWS_S3_REGION="us-east-1"

# Payment Gateway (Razorpay recommended for India)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# Maps API (Google Maps)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID="your-calendar-client-id"
GOOGLE_CALENDAR_CLIENT_SECRET="your-calendar-client-secret"

# Push Notifications
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# Redis (for caching and queues)
REDIS_URL="redis://localhost:6379"

# Application Settings
NODE_ENV="development"
PORT="3000"
APP_URL="http://localhost:3000"